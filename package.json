{
  "name": "pirate-loader",
  "author": "Adrian C. Miranda",
  "description": "Webpack loader for vanillaJS components",
  "version": "1.0.0",
  "main": "index.js",
  "homepage": "https://github.com/adriancmiranda/pirate-loader",
  "readmeFilename": "README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adriancmiranda/pirate-loader.git"
  },
  "bugs": {
    "url": "https://github.com/adriancmiranda/pirate-loader/issues"
  },
  "xo": {
    "overrides": [
      {
        "files": "index.js",
        "esnext": false
      },
      {
        "files": "lib/**/*.js",
        "esnext": false
      }
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    }
  },
  "scripts": {
    "upgrade": "ncu -a --loglevel verbose --packageFile package.json && npm i",
    "dev": "run-p watch:*",
    "test": "ava test/*.spec.js",
    "watch:test": "npm test -- --watch",
    "lint": "xo index.js tools.js templates.js lib/**/*.js",
    "travis:test": "npm test",
    "appveyor:test": "node --max_old_space_size=4096 \"node_modules\\ava-cli\\cli\" \"test/*.spec.js\"",
    "precommit": "run-s lint test",
    "commitmsg": "validate-commit-msg",
    "release": "npm run build && standard-version"
  },
  "dependencies": {
    "is": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "ava-cli": "^0.0.1",
    "ava-spec": "^1.1.0",
    "conventional-commit-types": "^2.1.0",
    "cross-env": "^4.0.0",
    "husky": "^0.13.3",
    "npm-check-updates": "^2.10.4",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "standard-version": "^4.0.0",
    "validate-commit-msg": "^2.12.0",
    "xo": "^0.18.1"
  },
  "engines": {
    "node": ">=6.10.1"
  },
  "keywords": [
    "webpack",
    "pirate-loader"
  ]
}
